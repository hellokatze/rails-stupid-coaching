<div class="container">
  <div class="d-flex justify-content-center align-items-center flex-column">
    <h1>Stupid coaching</h1>

    <div class="card bg-light mb-3 ml-3 vw-100 m-3" style="max-width: 18rem;">
      <div class="card-header">Your question</div>
      <div class="card-body">
        <h5 class="card-title"><%= @question %></h5>
      </div>
    </div>

    <div class="card text-white bg-dark mb-3 ml-3 vw-100 m-3" style="max-width: 18rem;">
      <div class="card-header">Coach's answer</div>
      <div class="card-body">
        <h5 class="card-title"><%= @answer %></h5>
      </div>
    </div>
      <div class="d-flex m-3">
        <%= link_to "Get coached again!", ask_path %>
      </div>
  </div>
</div>
